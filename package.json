{
  "name": "@2dfire/utils",
  "version": "0.0.1",
  "main": "lib/main.web.js",
  "description": "2dfire公用工具库",
  "repository": {
    "type": "git",
    "url": "http://git.2dfire-inc.com/feiyuzi/2dfire-guide.git"
  },
  "scripts": {
    "clean": "rimraf ./lib",
    "dev": "cross-env PLATFORM=web webpack --watch --hide-modules",
    "build:web": "cross-env NODE_ENV=production PLATFORM=web webpack --progress --hide-modules",
    "build:wxApp": "cross-env NODE_ENV=production PLATFORM=wxApp webpack --progress --hide-modules",
    "build": "npm run clean && npm run build:web && npm run build:wxApp",
    "push": "npm publish --registry http://10.1.6.28",
    "del": "npm unpublish --force --registry http://10.1.6.28",
    "repush": "npm run del && npm run push"
  },
  "license": "MIT",
  "author": "hupo",
  "dependencies": {
    "classnames": "^2.2.5",
    "js-cookie": "^2.1.4",
    "promise": "^7.1.1",
    "query-string": "^4.3.4"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.0.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^5.0.0",
    "rimraf": "^2.4.3",
    "webpack": "^2.6.1"
  }
}
